# FeatherTrace CPU 版本镜像
# 用于没有 GPU 的环境

FROM python:3.10-slim

LABEL maintainer="FeatherTrace"
LABEL description="FeatherTrace Bird Recognition System (CPU Version)"

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    exiftool \
    && rm -rf /var/lib/apt/lists/*

# 安装 Python 依赖
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制配置和脚本
COPY config/ ./config/
COPY scripts/ ./scripts/
COPY src/ ./src/

# 创建必要目录
RUN mkdir -p data/models data/db data/processed data/references

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/api/recognition/health')" || exit 1

# 启动命令
CMD ["uvicorn", "src.web.app:app", "--host", "0.0.0.0", "--port", "8000"]
